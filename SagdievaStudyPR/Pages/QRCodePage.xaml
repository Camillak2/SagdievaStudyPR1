<Page x:Class="SagdievaStudyPR.Pages.QRCodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SagdievaStudyPR.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="QRCodePage" FontSize="20">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Button x:Name="CreateQRBTN"
                Content="Создать QR Code"
                Width="250"
                Height="50"
                Margin="20"
                Click="CreateQRBTN_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Image x:Name="imageQr"
                Height="350"
                Width="350"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <Button x:Name="BackBTN"
                Content="Назад"
                Width="250"
                Height="50"
                Margin="20"
                Click="BackBTN_Click"/>
        </StackPanel>
    </Grid>
</Page>
